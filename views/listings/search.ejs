<% layout("/layouts/boilerplate") %>

<div class="container">
  <!-- Display the category name dynamically -->
  <h1>Listings for <%= category.charAt(0).toUpperCase() + category.slice(1) %></h1>

  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% if (allListings && allListings.length > 0) { %>
      <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card" style="width: 25rem;">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %><br /></b>
                &#8377; <%= listing.price?.toLocaleString('en-IN') %> /night
                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      <% } %>
      <% } else { %>
        <p>No listings available for the <%= category %> category.</p>
      <% } %>
  </div>
</div>

