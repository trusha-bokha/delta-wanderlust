<% layout("/layouts/boilerplate1") %>


<div class="row mt-3 ">
    <h1 class="col-4 offset-4">Admin</h1>
    <div class="col-4 offset-4">
        <form action="/admin/login" method="POST" class="needs-validation" >
            <div class="mb-3 username">
                    <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" class="form-control" placeholder="enter username" required/>
            </div>
            <div class="mb-3 password">
                <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" class="form-control" placeholder="enter password" required/>
            </div>
            <button class="btn btn-success col-12 offset-0">submit</button>
        </form>
    </div>
</div>