<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-4 offset-4">SignUp </h1>
    <div class="col-4 offset-4">
        <form action="/signup" method="POST" class="needs-validation"  >
            <div class="mb-3 username">
                <label for="username" class="form-label">Username</label>
              <input name="username" id="username" type="text" class="form-control" placeholder="enter username" required/>
              <div class="valid-feedback"> looks good</div>
            </div>
            <div class="mb-3 email">
                <label for="email" class="form-label">Email</label>
              <input name="email" id="email" type="email" class="form-control" placeholder="enter email" required/>
              
            </div>
